<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OrangeHRM Docker Regression" parallel="tests" thread-count="2">

    <listeners>
        <listener class-name="com.orangehrm.listeners.TestListener"/>
    </listeners>

    <test name="Login Tests - Chrome">
        <parameter name="browser" value="chrome"/>
        <parameter name="os" value="linux"/>
        <classes>
            <class name="com.orangehrm.tests.LoginTest"/>
            <class name="com.orangehrm.tests.EmployeeTest"/>
        </classes>
    </test>

    <test name="Login Tests - Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="os" value="linux"/>
        <classes>
            <class name="com.orangehrm.tests.LoginTest"/>
            <class name="com.orangehrm.tests.EmployeeTest"/>
        </classes>
    </test>

</suite>
